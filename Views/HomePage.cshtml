@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}

<section class="hero-image">
    <h1>@(!string.IsNullOrWhiteSpace(@Model.Title) ? Model.Title : Model.Name)</h1>
    <p>@Model.WelcomeText</p>
    <a href=@Model.HeroButtonLink>
        <div class="button">@Model.ButtonText</div>
    </a>
</section>

<main>
    <section>
        <div id="services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="intro-section text-center">
                            <h2>@Model.IntroSectionTitle</h2>
                            <p>@Model.IntroSectionText</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="content-box">
                            <div class="infobox">
                                <img src="https://static.live.templately.com/woocommerce/2021/11/icon-1.png"
                                    alt="Icon One">
                                <h3>@Model.InfoBoxOneText</h3>
                                <p>@Model.InfoboxOneDescription</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="content-box">
                            <div class="infobox">
                                <img src="https://static.live.templately.com/woocommerce/2021/11/icon-2.png"
                                    alt="Icon Two">
                                <h3>@Model.InfoBoxTwoText</h3>
                                <p>@Model.InfoboxTwoDescription</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="content-box">
                            <div class="infobox">
                                <img src="https://static.live.templately.com/woocommerce/2021/11/icon-3.png"
                                    alt="Icon Three">
                                <h3>@Model.InfoBoxThreeText</h3>
                                <p>@Model.InfoboxThreeDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container about-us-section" id="about-us">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-sm-12">
                    <h3>About Us</h3>
                    <h4>@Model.AboutUsTitle</h4>
                    <p>@Model.AboutUsDescription</p>
                </div>
                <div class="col-lg-2 col-md-12 col-sm-12 "></div>
                <div class="col-lg-5 col-md-12 col-sm-12 ">
                    <img class="img-fluid" src="https://cdn.pixabay.com/photo/2021/08/30/18/33/worker-6586718_1280.jpg"
                        alt="About us section image" />
                </div>
            </div>
        </div>


        <div class="container gallery-section" id="gallery">
            <h3 class="text-center mb-5 mt-5">Gallery</h3>
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <figure>
                        <a href="https://pixabay.com/photos/building-skyscraper-modern-facade-1914309/" target="_blank"
                            rel="noreferrer">
                            <img class="img-fluid"
                                src="https://cdn.pixabay.com/photo/2016/12/17/20/05/building-1914309_1280.jpg"
                                alt="Gallery image" />
                        </a>
                        <figcaption>Gallery Image One</figcaption>
                    </figure>

                </div>
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <figure>
                        <a href="https://pixabay.com/photos/architecture-skyscraper-2256489/" target="_blank"
                            rel="noreferrer">
                            <img class="img-fluid"
                                src="https://cdn.pixabay.com/photo/2017/04/24/13/37/architecture-2256489_1280.jpg"
                                alt="Gallery image" />
                        </a>
                        <figcaption>Gallery Image Two</figcaption>
                    </figure>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <figure>
